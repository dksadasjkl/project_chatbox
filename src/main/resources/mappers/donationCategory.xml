<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.give.repository.DonationCategoryMapper">

    <resultMap id="DonationCategoryResultMap" type="com.project.give.entity.DonationCategory">
        <id property="donationCategoryId" column="donation_category_id"/>
        <result property="donationCategoryNameKor" column="donation_category_name_kor"/>
    </resultMap>

    <select id="selectAllDonationCategories" resultMap="DonationCategoryResultMap">
        select
            donation_category_id,
            donation_category_name_kor
        from
            donation_category_tb
    </select>

</mapper>